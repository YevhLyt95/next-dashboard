generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}
model User{
  id String @id
  name String
  email String @unique
  password String
  
}

model Customer{
  id String @id
  name String
  email String @unique
  image_url String
  invoices Invoice[]
}

model Invoice {
  id          Int      @id @default(autoincrement())
  customer_id String
  amount      Int
  status      String
  date        DateTime
  customer    Customer @relation(fields: [customer_id], references: [id])
}

model Revenue {
  id      Int    @id @default(autoincrement())
  month   String
  revenue Int
}
